<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HALAMAN STATIC</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/all.css">
    <script src="/javascripts/all.js"></script>
</head>
<body>

    <div class="card">
    	<div class="card-header" style="background-color: #fdc611;color: aliceblue;">
			Edit
		</div>
        <div class="card-body">
            <form action="/cafe/update" method="post">
                <div class="form-group">
                    <label>ID:</label>
                    <select name="pid" class="form-control">
                        <% data.forEach(function(item){ %>
                        <option value="<%= item.pid%>"><%= item.pid%></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label>Cashier Name:</label>
                    <select name="cashier" class="form-control">
                        <% data.forEach(function(item){ %>
                        <option value="<%= item.casid%>"><%= item.casnama%></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label>Product Name</label>
                    <input type="text" class="form-control" name="product" value="" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Category Name</label>
                    <select name="category" class="form-control">
                        <% data.forEach(function(item){ %>
                        <option value="<%= item.catid%>"><%= item.catnama%></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label>Product Price</label>
                    <input type="number" class="form-control" name="price" value="" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-arka" value="UPDATE"/>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>